{
    "title": "Change Modifier key + i/j/k/l to arrow keys",
    "rules": [
        {
            "description": "Change Control + i/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['control'], ['any']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['control'], ['any']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ['control'], ['any']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['control'], ['any']) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },

        {
            "description": "Change Option + i/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['option'], ['any']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['option'], ['any']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ['option'], ['any']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['option'], ['any']) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },

        {
            "description": "Change Fn + i/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['fn'], ['any']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['fn'], ['any']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ['fn'], ['any']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['fn'], ['any']) %>,
