    {
      "description": "Launch shcreenshot.app and downsize the image in clipboard with pbresize (https://github.com/chongkim/pbresize)",
      "manipulators": [
        {
          "from": {
            "key_code": "print_screen"
          },
          "to": [
            {
              "shell_command": "open -a screenshot.app && pbresize"
            }
          ],
          "type": "basic"
        },
